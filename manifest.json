{
    "manifest_version": 3,
    "name": "Fpl Buddy",
    "version": "1.0",
    "description": "Adds next five fixtures coloured by difficulty, player stats, and ownership data to FPL pages with a clean, optimized interface.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://fantasy.premierleague.com/*"
    ],
    "icons": {
        "16": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Fpl Buddy Settings"
    },
    "content_scripts": [
        {
            "matches": [
                "https://fantasy.premierleague.com/*"
            ],
            "js": [
                "content.js",
                "league_table.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}